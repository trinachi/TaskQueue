<%= form_for(@task) do |f| %>
  <% if @task.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@task.errors.count, "error") %> prohibited this task from being saved:</h2>

      <ul>
      <% @task.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :task %><br />
    <%= f.text_field :task %>
  </div>
  
  <div class="field">
    <%= f.label :time %><br />
	  <%= f.select(:time, options_for_select(TimeInterval.form_parameters)) %>
  </div>
  
  <div class="field">
    <%= f.label :description %><br />
    <%= f.text_area :description %>
  </div>
  
  <div class="field">
    <%= f.label :category_id %><br />
    <%= collection_select( :task, :category_id, Category.all, :id, :name ) %>
  </div>
  
  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>