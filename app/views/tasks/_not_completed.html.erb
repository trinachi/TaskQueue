<ul id="tasks">
<% @tasks.each do |task| %>
	<% if !task.completed? %>
	  <li>
		<%= form_tag(complete_task_path(task), :method => "get") do %>
			<%= submit_tag("complete") %>
		<% end %>

	   	<h3><a href="#"><%= "#{task.task}" %></a></h3>
	    <p><%= task.time %> min</p>
		<p>Category: <%= task.category.name %></p>
		<p>Priority: <%= task.priority %></p>
		<p>User id: <%= task.user_id %></p>
		<p><%= link_to 'Move up', prioritize_task_path(task) %></p>
		<p><%= link_to 'Move down', deprioritize_task_path(task) %></p>
		<div class="more_info">
			<p><%= task.description %></p>
			<p><%= link_to 'Edit', edit_task_path(task) %></p>
		</div>
	  </li>
	<% else %>
	<% end %>
<% end %>
	</ul>